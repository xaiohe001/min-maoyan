 
.header {
  margin: 90rpx 0 90rpx 50rpx;
  border-bottom: 1px solid #ccc;
  text-align: center;
  width: 650rpx;
  height: 300rpx;
  line-height: 450rpx;
}

.header image {
  width: 200rpx;
  height: 200rpx;
}

.content {
  margin-left: 50rpx;
  margin-bottom: 90rpx;
}

.content text {
  display: block;
  color: #9d9d9d;
  margin-top: 40rpx;
}

.bottom {
  color: red;
  border-radius: 80rpx;
  margin: 70rpx 50rpx;
  font-size: 35rpx;
}
.message image {
  float: left;
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}
.message {
  padding: 40rpx;
}
.message text {
  display: inline-block;
  float: left;
  color: #333;
  font-size: 28rpx;
}