.container{
  padding: 0;
}
.btn{
  width: 100%;
  padding: 0;
}


.head-height {
  height: 240rpx;
}

.head {
  display:flex;
  width: 100%;
  background: linear-gradient(135deg, rgb(242, 238, 255) 0%, rgb(255, 255, 255) 100%);
  align-items: center;
}

.login-button {
  opacity: 0; 
  width: 100%;
  position: fixed;
}
.userinfos{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  position: fixed;
  background: linear-gradient(135deg, rgb(242, 238, 255) 0%, rgb(255, 255, 255) 100%);
}
.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  position: fixed;
  background: linear-gradient(135deg, rgb(242, 238, 255) 0%, rgb(255, 255, 255) 100%);
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 30rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #333333;
  font-size: 42rpx;
}
.list-wrapper {
  width: 100%;
  margin-top: 200rpx;
}

/* 横着的分割View样式 */
/*分割线样式*/
.div-line{
  background: #E0E3DA;
  width: 100%;
  height: 3rpx;
}

.list-item {
  width: 100%;
  height: 120rpx;
}

.list-item_active {
  background-color: #E0E3DA;
}

.item {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 120rpx;
}
.item-text {
  position: fixed;
  left: 100rpx;
  font-size: 38rpx;
}
.item-array {
  position: fixed;
  right: 50rpx;
  font-size: 38rpx;
}

.item-image {
  position: fixed;
  left: 50rpx;
  width: 40rpx;
  height: 40rpx;
}